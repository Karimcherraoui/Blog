<section class="mb-28">
    <h1 class="text-center text-3xl mb-20 mt-10 text-bold	">Gerer Categorie</h1>
<!-- --------------------------- Gerer Categorie --------------------------------- -->
<div class="flex flex-row gap-10">

        <div class="flex flex-col w-1/3 justify-center items-center">
            <h3 class="mb-3">Add Categorie</h3>
            <form action="/gestion/addCategorie" method="post">
                <input class="border rounded px-7" placeholder=" Enter name categorie" type="text" name="name" required><br><br>
                <div class="flex justify-center"> <!-- Use flex to center the input -->
                    <input class="py-2 px-8 rounded bg-green-400 text-white" type="submit" value="Add" required>
                </div>             
             </form> 

             </div>



             <div class="flex flex-col w-1/3 justify-center items-center">
                <h3 class="mb-1">Update Categorie</h3>
                
                <form action="/categorie/update/" method="post">
                    <div class="flex flex-row gap-4 my-4">
                        <select class=" px-16 border-2" name="categorieID" >
                            <% categories.forEach(element => { %>
                                <option  value="<%- element.categorieID%>"> <%- element.name%></option>
                                <% }); %>
                            </select>
                            <input class="border rounded px-7 " placeholder=" Enter new name " type="text" id="categorie" name="nameCategorie" required>
                        </div>
                            <div class="flex justify-center"> <!-- Use flex to center the input -->
                                <input class="py-2 px-4 rounded bg-blue-400 text-white" type="submit" value="Update" required>
                            </div>          
                        </form> 
                 </div>
                 
                 <div class="flex flex-col w-1/3 justify-center items-center">
                     <h3 class="mb-1">Delete Categorie</h3>
                     <form action="/categorie/delete/" method="post">
                         <select class="m-4 px-16 border-2" name="categorieID" >
                             <% categories.forEach(element => { %>
                            <option  value="<%- element.categorieID%>"> <%- element.name%></option>
                            <% }); %>
                          </select>
                        <div class="flex justify-center"> <!-- Use flex to center the input -->
                            <input class="py-2 px-4 rounded bg-red-400 text-white" type="submit" value="Delete" required>
                        </div>          
                        </form> 
        
                     </div>

</div>
<br><br><br>


<hr class="h-px my-8 bg-gray-200 border-2 dark:bg-gray-700">

<!-- ----------------------------------------------------------------------------- -->

<!-- --------------------------- ajouter Article --------------------------------- -->


<div>
    <h1 class="text-center text-3xl mb-20 mt-10 text-bold" >Ajouter nouveau article</h1>

    <div class="ml-24">
        <form action="/gestion/addArticle" method="post" enctype="multipart/form-data">
            <label class="mr-20" for="titre">Titre d'article : </label>
            <input class="border rounded px-7 mb-4 w-1/2" placeholder=" Enter Le titre d'article" type="text" id="titre" name="title" required><br>
            <label class="mr-16" for="auteur">Auteur d'article : </label>
            <input class="border rounded px-7 mb-4" placeholder=" Enter auteur d'article" type="text" id="auteur" name="auteur" required>


            <div class="flex flex-row  items-center">

                <label class="mr-6" for="categorie">Selection categorie : </label>
                <select class="m-4 border px-20" name="categories[]" id="categorie" multiple>
                    <% categories.forEach(element => { %>
                        <option value="<%- element.categorieID %>"> <%- element.name %></option>
                    <% }); %>       
                </select>                
                
            </div>
            <div class="flex flex-row">
                <p class="mr-14" for="contenu">Contenu d'article : </p>
                <textarea class="border w-1/2 " id="w3review" name="content" rows="4" cols="50"></textarea>
            </div>
            <div class="mt-10">
                <label class="mr-9" for="categorie">Selection image : </label>
                <input type="file" name="image" accept="image/*" required/>
                <br><br>
            </div>

            <div class="flex justify-center"> <!-- Use flex to center the input -->
                <input class="py-2 px-4 mt-10 rounded bg-green-400 text-white" type="submit" value="Ajouter Article" required>
            </div>          
            </form> 
    </div>

</div>


<!-- ----------------------------------------------------------------------------- -->

</section>